generator client {
  provider     = "prisma-client-js"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  schemas  = ["local_dev"]

}

model User {
  id           String        @id @default(uuid())
  createdAt    DateTime      @default(now())
  isActive     Boolean       @default(true)
  lastSeen     DateTime      @default(now())
  password     String?
  updatedAt    DateTime      @updatedAt
  tokenVersion Int           @default(0)
  email        String        @unique
  firstName    String
  lastName     String
  middleName   String?
  mobileNumber String        @unique
  userName     String        @unique
  messagesSent Message[]
  participants Participant[]
  enableAccountTokens EnableAccountToken[]
  firebaseUid String? @unique

  @@schema("local_dev")
  @@index([email])
  @@index([userName])
}

model EnableAccountToken {
  id        String   @id @default(uuid())
  jti       String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@schema("local_dev")
}

model Conversation {
  id           String        @id @default(uuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  messages     Message[]
  participants Participant[]
    @@schema("local_dev")
}

model Participant {
  id             String       @id @default(uuid())
  userId         String
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])

  @@unique([userId, conversationId])
    @@schema("local_dev")
}

model Message {
  id             String       @id @default(uuid())
  content        String
  senderId       String
  conversationId String
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  sender         User         @relation(fields: [senderId], references: [id])
    @@schema("local_dev")
}
